<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/lnrStudent"
    android:padding="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginHorizontal="10dp"
    android:background="@drawable/bg_shadow_white_card"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/lnrStudentDetails"
        android:background="@color/clr_white"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/lblstudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_gravity="left"
        android:gravity="left"
        android:textColor="@color/clr_blue"
        android:text="nisha"
        android:padding="5dp"/>
    <TextView
        android:id="@+id/lblsection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:layout_gravity="left"
        android:gravity="left"
        android:textColor="@color/clr_black"
        android:text="nisha"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/lblstatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:layout_gravity="left"
        android:textColor="@color/clr_green"
        android:text="nisha"
        android:padding="5dp"/>

</LinearLayout>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="100dp"
        android:id="@+id/btnView"
        android:text="View"
        android:textSize="14sp"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center"
        style="@style/Teacher_btn_green"/>
</LinearLayout>