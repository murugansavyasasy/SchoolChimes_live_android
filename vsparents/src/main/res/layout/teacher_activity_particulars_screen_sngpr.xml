<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:layout_margin="10dp"
    android:background="@drawable/teacher_img_app_bg"
    tools:context=".activity_SINGAPORE.TeacherParticularsScreen_SNGPR">

    <LinearLayout
        android:id="@+id/parti_ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/teacher_clr_white"
        android:orientation="horizontal"
        android:padding="7dp">

        <TextView
            android:id="@+id/parti_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/staff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/parti_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/parti_ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/parti_ll1"
        android:layout_marginTop="10dp"
        android:background="@color/teacher_clr_white"
        android:orientation="horizontal"
        android:padding="7dp">

        <TextView
            android:id="@+id/parti_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/students"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/parti_tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp" />
    </LinearLayout>

    <ExpandableListView
        android:id="@+id/parti_exlvList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/parti_ll2"
        android:layout_marginTop="10dp"
        android:childDivider="@color/teacher_clr_white"
        android:divider="@color/teacher_clr_black_trans_20"
        android:groupIndicator="@null" />

</RelativeLayout>
