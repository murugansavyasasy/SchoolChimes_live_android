<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_black_trans_80"
    android:padding="25dp"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="7dp">

            <ImageView
                android:id="@+id/popupHelp_ivClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_margin="5dp"
                android:background="@drawable/ic_close"
                android:clickable="true" />


            <TextView
                android:id="@+id/popupHelp_tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="7dp"
                android:text="@string/pop_response_title_help"
                android:textAllCaps="true"
                android:textColor="@color/clr_white"
                android:textSize="16dp"
                android:textStyle="bold" />


            <!--<TextView-->
                <!--android:id="@+id/lblFAQ"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="right"-->
                <!--android:gravity="center"-->
                <!--android:padding="7dp"-->
                <!--android:text="@string/faq"-->
                <!--android:textAllCaps="true"-->
                <!--android:textColor="@color/clr_white"-->
                <!--android:textSize="16dp"-->
                <!--android:textStyle="bold" />-->


        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/clr_window_bg"
            android:orientation="vertical"
            android:padding="15dp">

            <EditText
                android:id="@+id/popupHelp_etMsg"
                style="@style/txt_edittext_16_bold"
                fontPath="fonts/Montserrat-Bold.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_stroke_grey"
                android:ems="10"
                android:gravity="left|start"
                android:hint="@string/pop_response_hint_msg"
                android:inputType="textMultiLine"
                android:maxLength="460"
                android:maxLines="10"
                android:minLines="5"
                android:scrollbars="vertical" />

            <TextView
                android:id="@+id/popupHelp_tvTxtCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:padding="7dp"
                android:text="@string/pop_response_txt_count"
                android:textColor="@color/clr_grey_dark"
                android:textSize="12sp"
                android:textStyle="bold" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/popupHelp_tvSend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:clickable="true"
                    android:padding="7dp"
                    android:text="@string/pop_response_btn_send"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </FrameLayout>
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>