<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_10sdp">

    <ImageView
        android:id="@+id/imgRightSidePointer"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/pointing_right">

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/imgRightSidePointer"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/lblFromTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:fontFamily="@font/optima"
            android:text="01:10am"
            android:textColor="@color/clr_black"
            android:textSize="18dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/lblTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/lblFromTime"
            android:layout_weight="0.3"
            android:fontFamily="@font/optima"
            android:text="to"
            android:textColor="@color/bpBlue"
            android:textSize="18dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/lblToTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/lblTo"
            android:layout_weight="0.3"
            android:fontFamily="@font/optima"
            android:text="05:15am"
            android:textColor="@color/clr_black"
            android:textSize="18dp"
            android:textStyle="bold">

        </TextView>

        <CheckBox
            android:id="@+id/chSlot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/lblToTime">

        </CheckBox>

    </LinearLayout>
</RelativeLayout>