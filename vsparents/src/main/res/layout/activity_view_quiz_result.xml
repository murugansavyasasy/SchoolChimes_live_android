<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@drawable/img_app_bg"
    tools:context=".activity.ViewQuizResult">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/lnrRightAnswer"
        android:weightSum="1"
        android:layout_margin="@dimen/_3sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="@string/right_answer"
            android:layout_weight="0.5"
            android:textSize="16dp"
            android:textColor="@color/design_default_color_primary_dark"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text=":"
            android:textSize="18dp"
            android:textColor="@color/clr_black"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/lblrightanswer"
            android:text=""
            android:textSize="16dp"
            android:layout_weight="0.5"
            android:textColor="@color/clr_green"
            android:layout_below="@+id/imgBack"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="2dp"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/lnrWrongAnswer"
        android:weightSum="1"
        android:layout_margin="@dimen/_3sdp"
        android:layout_below="@id/lnrRightAnswer"
        app:layout_constraintTop_toBottomOf="@id/lnrRightAnswer"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="@string/wrong_answer"
            android:layout_weight="0.5"
            android:textSize="16dp"
            android:textColor="@color/design_default_color_primary_dark"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text=":"
            android:textSize="18dp"
            android:textColor="@color/clr_black"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/lblwronganswer"
            android:text=""
            android:textSize="16dp"
            android:layout_weight="0.5"
            android:textColor="@color/bpRed"
            android:layout_below="@+id/imgBack"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="2dp"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/lnrUnAnswer"
        android:weightSum="1"
        android:layout_below="@id/lnrWrongAnswer"
        android:layout_margin="@dimen/_3sdp"
        app:layout_constraintTop_toBottomOf="@id/lnrWrongAnswer"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="@string/not_answered"
            android:layout_weight="0.5"
            android:textSize="16dp"
            android:textColor="@color/design_default_color_primary_dark"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text=":"
            android:textSize="18dp"
            android:textColor="@color/clr_black"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/lblnotanswer"
            android:text=""
            android:textSize="16dp"
            android:layout_weight="0.5"
            android:textColor="@color/bpRed"
            android:layout_below="@+id/imgBack"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="2dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/lnrUnAnswer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="5dp"
        android:layout_below="@id/lnrUnAnswer"
        android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcyquestions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/lnrUnAnswer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"/>
    </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>