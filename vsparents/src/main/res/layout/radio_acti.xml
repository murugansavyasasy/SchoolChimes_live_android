<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/lblQuestion1"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/feed_Back_Details"
            android:textStyle="normal"
            android:text="@string/_1_question_1_radio"
            />
        <RadioGroup
            android:id="@+id/radio"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/radioLessThanMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RadioButton1"

                />
            <RadioButton
                android:id="@+id/radioMonths"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RadioButton2"

                />

            <RadioButton
                android:id="@+id/radioyears"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RadioButton2"

                />
            <RadioButton
                android:id="@+id/radiogreatethan3years"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RadioButton2"
                />
        </RadioGroup>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>