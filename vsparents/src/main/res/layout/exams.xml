<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rytExams"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:background="@drawable/exam_list_bg"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/Exam_Name"
            android:textColor="@color/clr_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:textStyle="normal"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:text="@string/exam_names"/>
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_right"
            android:layout_height="30dp" />
        <Button
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/btnProgress"
            android:background="@drawable/bg_shadow_white_card"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:paddingHorizontal="5dp"
            android:textSize="12dp"
            android:textColor="@color/colorPrimary"
            android:text="@string/viewProgress"
            android:layout_below="@id/Exam_Name"
            android:layout_alignParentRight="true"
            />
        <Button
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/btnmarks"
            android:textSize="12dp"
            android:paddingHorizontal="5dp"
            android:background="@drawable/bg_shadow_white_card"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="@string/viewMarks"
            android:textColor="@color/colorPrimary"
            android:layout_below="@id/Exam_Name"
            android:layout_alignParentLeft="true"
            />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>