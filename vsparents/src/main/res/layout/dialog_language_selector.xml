<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="20dp">

    <RelativeLayout
        android:id="@+id/lblSelectLanguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/close_icon_without_bg">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/imgClose"
            android:text="Select Language"
            android:textColor="@color/clr_black"
            android:textSize="15sp"
            android:textStyle="bold">

        </TextView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlaLanguageSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblSelectLanguage">


        <RelativeLayout
            android:id="@+id/rlaEnglish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:padding="5dp">

            <CheckBox
                android:id="@+id/chEnglish"
                style="@style/CustomCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:textColor="@color/clr_black"
                android:textSize="13sp"
                tools:ignore="MissingConstraints" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/chEnglish">

                <TextView
                    android:id="@+id/lblEnglish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="English"
                    android:textColor="@color/clr_black"
                    android:textSize="13sp"
                    android:textStyle="bold"></TextView>

                <ImageView
                    android:id="@+id/imgEnglish"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/en_language_gray">

                </ImageView>

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rlaEnglish"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@color/gnt_gray">

        </View>



        <RelativeLayout
            android:id="@+id/rlaThai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:padding="5dp">

            <CheckBox
                android:id="@+id/chThai"
                style="@style/CustomCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:textColor="@color/clr_black"
                android:textSize="13dp"
                tools:ignore="MissingConstraints" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/chThai">

                <TextView
                    android:id="@+id/lblThai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thai"
                    android:textColor="@color/clr_black"
                    android:textSize="13sp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblThai"
                    android:layout_marginTop="10dp"
                    android:text="Thai"
                    android:textColor="@color/clr_black"
                    android:textSize="13sp"></TextView>

                <ImageView
                    android:id="@+id/imgThai"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/th_language_gray">

                </ImageView>
            </RelativeLayout>
        </RelativeLayout>


    </RelativeLayout>


    <TextView
        android:id="@+id/btnConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlaLanguageSelect"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/rect_btn_orange"
        android:padding="8dp"
        android:text="Confirm"
        android:textColor="@color/bpWhite"
        android:textStyle="bold">

    </TextView>
</RelativeLayout>
