<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/teacher_img_app_bg"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
          android:layout_above="@+id/btnMakePayment"
            android:id="@+id/monthly_fees_recycle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical" />

    <Button
        android:id="@+id/btnMakePayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/teacher_btn_login"
        style="@style/Teacher_btn_primary"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/make_payment"
        android:visibility="visible" />

</RelativeLayout>