<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/teacher_img_app_bg"
    tools:context=".activity_USA.TeacherSignInScreen_USA"
    tools:ignore="MissingPrefix">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/teacher_app_name"
        app:srcCompat="@drawable/voicesnap_logo_trans" />


    <LinearLayout
        android:layout_below="@+id/imageView"
        android:layout_width="300dp"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="@string/create_new_password"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/teacher_bg_stroke_grey">

            <EditText
                android:id="@+id/create_etPassword"
                style="@style/Teacher_txt_edittext_16_bold"
                fontPath="fonts/Montserrat-Regular.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_margin="7dp"
                android:layout_toLeftOf="@+id/view_line"
                android:layout_toStartOf="@+id/view_line"
                android:background="@android:color/transparent"

                android:drawablePadding="5dp"

                android:ems="10"
                android:hint="@string/teacher_hint_password"
                android:inputType="textPassword"
                android:maxLength="20" />

            <View
                android:id="@+id/view_line"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/login_ivEye"
                android:layout_toStartOf="@+id/login_ivEye"
                android:background="@color/teacher_clr_grey" />

            <ImageView
                android:id="@+id/login_ivEye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="1dp"
                android:contentDescription="@string/teacher_app_name"
                android:padding="10dp"
                app:srcCompat="@drawable/teacher_ic_visibility_off_24dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="@string/confirm_password"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/teacher_bg_stroke_grey">

            <EditText
                android:id="@+id/confirm_etPassword1"
                style="@style/Teacher_txt_edittext_16_bold"
                fontPath="fonts/Montserrat-Regular.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_margin="7dp"
                android:layout_toLeftOf="@+id/view_line1"
                android:layout_toStartOf="@+id/view_line1"
                android:background="@android:color/transparent"

                android:drawablePadding="5dp"

                android:ems="10"
                android:hint="@string/teacher_hint_password"
                android:inputType="textPassword"
                android:maxLength="20" />

            <View
                android:id="@+id/view_line1"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/login_ivEye1"
                android:layout_toStartOf="@+id/login_ivEye1"
                android:background="@color/teacher_clr_grey" />

            <ImageView
                android:id="@+id/login_ivEye1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="1dp"
                android:contentDescription="@string/teacher_app_name"
                android:padding="10dp"
                app:srcCompat="@drawable/teacher_ic_visibility_off_24dp" />
        </RelativeLayout>


        <Button
            android:id="@+id/btnConfirmSubmit"
            style="@style/Teacher_btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:text="@string/btn_submit" />

    </LinearLayout>
</RelativeLayout>
