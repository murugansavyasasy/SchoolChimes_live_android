<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/rytLessons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@drawable/bg_shadow_white_card"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">



        <LinearLayout
            android:id="@+id/lnrViews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lnrgender"
            android:layout_marginTop="5dp"
            android:background="@color/clr_white"
            android:orientation="vertical"
            android:padding="5dp">


        </LinearLayout>

        <View
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:background="@color/clr_report"
            android:layout_height="0.5dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imgYetStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="8"
                android:src="@drawable/yet_to_start_grey" />

            <View
                android:id="@+id/vwStageOne"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_weight="16"
                android:background="@color/card_grey" />

            <ImageView
                android:id="@+id/imgInProgress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="8"
                android:src="@drawable/inprogress_grey" />


            <View
                android:id="@+id/vwStageTwo"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_weight="16"
                android:background="@color/card_grey" />

            <ImageView
                android:id="@+id/imgCompleted"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="8"
                android:src="@drawable/completed_grey" />


        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblYetToStart"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:textColor="@color/clr_grey"
                android:textSize="12dp"
                android:text="@string/lbl_Yet_to_start"/>

            <TextView
                android:id="@+id/lblInProgress"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:gravity="center"
                android:textSize="12dp"
                android:textColor="@color/clr_grey"
                android:layout_height="wrap_content"
                android:text="@string/lbl_in_progress"/>

            <TextView
                android:id="@+id/lblCompleted"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:gravity="right"
                android:textSize="12dp"
                android:textColor="@color/clr_grey"
                android:layout_height="wrap_content"
                android:text="@string/lbl_completed"/>

        </LinearLayout>

        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:background="@color/clr_report"
            android:layout_height="0.5dp"/>



        <RelativeLayout
            android:layout_marginTop="5dp"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



<!--            <Button-->
<!--                android:id="@+id/btnEdit"-->
<!--                android:layout_width="80dp"-->
<!--                android:layout_height="30dp"-->
<!--                android:layout_alignParentLeft="true"-->
<!--                android:layout_marginBottom="10dp"-->
<!--                android:background="@drawable/rect_edit_bg_shadow"-->
<!--                android:paddingHorizontal="5dp"-->
<!--                android:text="Edit"-->
<!--                android:textColor="@color/bpBlue"-->
<!--                android:textSize="14dp" />-->


<!--            <Button-->
<!--                android:id="@+id/btnDelete"-->
<!--                android:layout_width="80dp"-->
<!--                android:layout_height="30dp"-->
<!--                android:layout_alignParentRight="true"-->
<!--                android:layout_marginBottom="10dp"-->
<!--                android:background="@drawable/rect_chimes_red"-->
<!--                android:paddingHorizontal="5dp"-->
<!--                android:text="Delete"-->
<!--                android:textColor="@color/bpWhite"-->
<!--                android:textSize="14dp" />-->


            <ImageView
                android:id="@+id/btnEdit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:paddingHorizontal="2dp"
                android:src="@drawable/edit_card"
                android:text="Edit"
                android:textSize="14dp" />


            <ImageView
                android:id="@+id/btnDelete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/delete_card"
                android:layout_marginBottom="10dp"
                android:paddingHorizontal="2dp"
                android:text="Delete"
                android:textSize="14dp" />

        </RelativeLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>