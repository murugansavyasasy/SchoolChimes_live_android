<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10sp"
    tools:context="com.vs.schoolmessenger.activity_SINGAPORE.StudentLibraryDetails_SNGPR">

    <!--<android.support.v7.widget.CardView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:padding="20sp">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:paddingBottom="5sp"
        android:paddingLeft="5dp"
        android:background="@drawable/bg_layout_with_shadow"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lblText"
                android:layout_width="80sp"
                android:text="@string/book_id"
                android:textSize="12sp"
                android:textStyle="normal"
                android:textColor="@color/clr_grey"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <TextView
               android:id="@+id/lblBookID"
                android:layout_toRightOf="@+id/lblText"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5sp"
                android:text=": 5621456"
                android:textStyle="normal"
                android:textColor="@color/clr_black"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lblText1"
                android:layout_width="80sp"
                android:text="@string/book_name"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="@color/clr_grey"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/lblBookName"
                android:layout_toRightOf="@+id/lblText1"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5sp"
                android:text=": Maths"
                android:textStyle="normal"
                android:textColor="@color/clr_black"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lblText2"
                android:layout_width="80sp"
                android:text="@string/issued_date"
                android:textSize="12sp"
                android:textStyle="normal"
                android:textColor="@color/clr_grey"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/lblIssuedDate"
                android:layout_toRightOf="@+id/lblText2"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5sp"
                android:text=": 12/02/2018"
                android:textStyle="normal"
                android:textColor="@color/clr_black"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lblText3"
                android:layout_width="80sp"
                android:text="@string/due_date"
                android:textSize="12sp"
                android:textStyle="normal"
                android:textColor="@color/clr_grey"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/lblDueDate"
                android:layout_toRightOf="@+id/lblText3"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5sp"
                android:text=": 13/5/2018"
                android:textColor="@color/clr_black"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:textStyle="normal"
                android:layout_height="wrap_content" />
        </RelativeLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>