<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/sinin_background3"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
           android:layout_margin="10dp"
            android:background="@drawable/bg_white_stroke_grey"
            android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgMobile"
                android:src="@drawable/teacher_draw_mobile"
                android:layout_centerVertical="true"
                android:layout_width="30dp"
                android:layout_height="30dp" />


        <com.google.android.material.textfield.TextInputLayout
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imgMobile"
            android:id="@+id/simpleTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:background="@drawable/bg_white_stroke_grey"
                android:id="@+id/simpleEditText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Enter Your Name" />
        </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/bg_white_stroke_grey"

            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgPassword"
                android:src="@drawable/teacher_draw_password"
                android:layout_centerVertical="true"
                android:layout_width="30dp"
                android:layout_height="30dp" />


            <com.google.android.material.textfield.TextInputLayout
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imgPassword"
                android:id="@+id/simpleTextInputLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:background="@drawable/bg_white_stroke_grey"

                    android:id="@+id/simpleEditText1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Enter Your Name" />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/teacher_ic_visibility_off_24dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />

        </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>