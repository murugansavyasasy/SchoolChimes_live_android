<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_app_bg"
    tools:context=".activity.ImageCircular">

    <RelativeLayout
        android:id="@+id/image_rlToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/image_ToolBarIvBack"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:clickable="true"
            app:srcCompat="@drawable/ic_arrow_black" />

        <TextView
            android:id="@+id/image_ToolBarTvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/image_ToolBarIvBack"
            android:layout_toRightOf="@+id/image_ToolBarIvBack"
            android:textColor="@color/clr_black"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="@string/name_circualr" />
    </RelativeLayout>


    <LinearLayout
        android:layout_below="@+id/image_rlToolbar"
        android:layout_centerHorizontal="true"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" />


    <RelativeLayout
        android:layout_below="@+id/adView"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="5dp"
        android:id="@+id/rytSearch"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/Searchable"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_search_shadow"
            android:hint="@string/search"
            android:textSize="15dp"
            android:paddingLeft="15dp"
            />

        <ImageView
            android:id="@+id/imgSearch"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_search_holo_light"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <ScrollView
        android:layout_above="@+id/bannerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rytSearch">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="25dp"
                android:visibility="gone"
                android:textSize="15dp"
                android:id="@+id/lblNoMessages"
                android:background="@drawable/bg_shadow_no_records"
                android:textColor="@color/teacher_clr_red_red"
                android:text=""
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/image_rvCircularList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblNoMessages"
                android:layout_margin="15dp"
                android:clipToPadding="false"
                android:scrollbars="vertical" />

            <TextView
                android:id="@+id/btnSeeMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_rvCircularList"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_stroke_primary"
                android:textColor="@color/colorPrimary"                android:padding="5dp"
                android:text="@string/SeeMore"
                android:visibility="gone"></TextView>




        </RelativeLayout>
    </ScrollView>

    <include
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bannerView"
        android:layout_marginTop="10dp"
        layout="@layout/ads_view"/>

    <RelativeLayout
        android:id="@+id/native_ad_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/lblClose"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="2dp"
            android:src="@drawable/ic_rounded_block_close"
            android:textColor="@color/clr_black"
            android:visibility="gone" />

        <com.vs.schoolmessenger.util.TemplateView
            android:id="@+id/my_template"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblClose"
            android:visibility="gone"
            app:gnt_template_type="@layout/gnt_medium_template_view" />

    </RelativeLayout>




</RelativeLayout>