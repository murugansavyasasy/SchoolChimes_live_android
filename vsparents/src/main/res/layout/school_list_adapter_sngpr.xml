<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/teacher_clr_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rytSchoolList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/schoolNmae"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/lnr"
            android:layout_toLeftOf="@+id/lnr"
            android:textColor="@color/teacher_clr_black"
            android:textSize="14sp"
            tools:text="Voicesnap public school" />


        <LinearLayout
            android:id="@+id/lnr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/princiSchool_ivRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/teacher_btn_ok"
                android:visibility="visible"
                app:srcCompat="@drawable/teacher_ic_right" />

            <CheckBox
                android:id="@+id/SelectedCheckBox"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </LinearLayout>


        <!--<View-->
        <!--android:layout_below="@+id/princiSchool_ivRight"-->
        <!--android:layout_width="match_parent"-->
        <!--android:background="@color/clr_black"-->
        <!--android:layout_height="1dp">-->
        <!---->
        <!--</View>-->
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/clr_grey"></View>

</LinearLayout>


