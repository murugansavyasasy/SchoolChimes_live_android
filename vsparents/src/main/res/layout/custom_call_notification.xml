<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rect_popup_white"
    android:paddingBottom="5dp"
    android:orientation="vertical"
   >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logoCall"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:src="@drawable/school_chimes"
            android:visibility="visible">

        </ImageView>

        <TextView
            android:id="@+id/notification_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/rlaButtons"
            android:layout_toRightOf="@+id/logoCall"
            android:fontFamily="@font/poppins_bold"
            android:padding="5dp"
            android:text="N.S.V.V boys hr sec school"
            android:textColor="@color/clr_orange"
            android:textSize="16dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/rlaButtons"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgDecline"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toLeftOf="@+id/imgAccept"
                android:layout_marginLeft="10dp"
                android:src="@drawable/declinecall">

            </ImageView>

            <ImageView
                android:id="@+id/imgAccept"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"

                android:src="@drawable/incomingcall"></ImageView>

        </RelativeLayout>

        <TextView
            android:id="@+id/lblSendBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notification_title"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toRightOf="@+id/logoCall"
            android:gravity="center"
            android:text="Incoming call........"
            android:textSize="12dp"
            android:textStyle="bold">

        </TextView>
    </RelativeLayout>
</RelativeLayout>