<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    android:id="@+id/lnrParent"
    android:padding="5dp"
    android:background="@drawable/bg_stroke_primary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/lblNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_unread_red"
            android:padding="3dp"
            android:text="@string/txt_new"
            android:textColor="@color/clr_white"
            android:textSize="10sp" />
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp">

            <TextView
                android:id="@+id/lblDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/clr_black"
                android:textSize="14dp"
                tools:text="9:00"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp">
            <TextView
                android:id="@+id/lblMeetingType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/clr_black"
                android:textSize="14dp"
                tools:text="GOOGLE MEET"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/right_arrow"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rytSubject"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp">
            <TextView
                android:id="@+id/lblSubject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/clr_black"
                android:textSize="14dp"
                tools:text="ENGLISH"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout

        android:id="@+id/relativeLayoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp">
        <TextView
            android:id="@+id/lblTopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/clr_black"
            android:textSize="15dp"
            android:layout_gravity="left"
            android:gravity="center"
            android:textStyle="bold"
            tools:text="@string/tamil" />
        <TextView
            android:id="@+id/lblDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/clr_black"
            android:layout_marginTop="5dp"
            android:textSize="14dp"
            android:layout_gravity="left"
            android:gravity="center"
            tools:text="@string/tamil" />

        <TextView
            android:id="@+id/lblURL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/clr_black"
            android:layout_marginTop="10dp"
            android:textSize="14dp"
            android:visibility="gone"
            android:layout_gravity="left"
            android:gravity="center"
            tools:text="@string/tamil" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:background="@color/clr_blue_light2">


        <TextView
            android:id="@+id/tv_description_notice_events_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/clr_black"
            android:textSize="15sp"
            tools:text="11.30 AM"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/cardText_notice_events__tvNew"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/clr_black"
            android:textSize="15sp"
            tools:text="11.30 AM" />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/clr_card_grey"
        android:padding="5dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/cardText_notice_events_tvShortMsg"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="3dp"
            android:autoLink="web"
            android:linksClickable="true"
            android:text="@string/sample_txt_msg"
            android:textColor="@color/clr_black"
            android:textSize="15sp" />
    </RelativeLayout>
    <com.ms.square.android.expandabletextview.ExpandableTextView
        android:id="@+id/expand_text_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/clr_card_grey"
        expandableTextView:animAlphaStart="1"
        expandableTextView:maxCollapsedLines="3">

        <TextView
            android:id="@id/expandable_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:autoLink="web"
            android:linksClickable="true"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/sample_txt_msg"
            android:textColor="@color/bpblack"
            android:ellipsize="end"
            android:textSize="16sp" />

        <ImageButton
            android:id="@id/expand_collapse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:background="@android:color/transparent"
            android:padding="16dp" />
    </com.ms.square.android.expandabletextview.ExpandableTextView>
</LinearLayout>