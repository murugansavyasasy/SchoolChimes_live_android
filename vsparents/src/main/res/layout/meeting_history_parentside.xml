<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/isHeader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="@dimen/_10sdp"
    android:background="@color/gnt_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@drawable/bg_round_courner"
        android:padding="5dp">

        <TextView
            android:id="@+id/lblPerpose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="5dp"
            android:text="Sports Meeting."
            android:textColor="@color/clr_black"
            android:textSize="16dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/lblPersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblPerpose"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@color/clr_black"
            android:textSize="15dp">

        </TextView>

        <TextView
            android:id="@+id/lblName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblPersion"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="Sathish"
            android:textColor="@color/clr_black"
            android:textSize="15dp"></TextView>

        <TextView
            android:id="@+id/lblSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblName"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="80dp"
            android:text="Physics"
            android:textColor="@color/clr_black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:visibility="gone">

        </TextView>

        <TextView
            android:id="@+id/lblStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/shape_rounded_corners"
            android:padding="3dp"
            android:text="Upcoming..."
            android:textColor="@color/clr_black"
            android:textSize="12dp"
            android:textStyle="bold">

        </TextView>


        <ImageView
            android:id="@+id/imgUser"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_below="@+id/lblName"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="@dimen/_20sdp"
            android:src="@drawable/student_profile"
            android:visibility="gone">

        </ImageView>

        <TextView
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgUser"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:maxLines="1"
            android:text="--------------------------------------------------------------------------"
            android:textColor="@color/clr_black"></TextView>

        <TextView
            android:id="@+id/lblClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="XII"
            android:textColor="@color/clr_black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:visibility="gone">

        </TextView>

        <LinearLayout
            android:id="@+id/lnrTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblClass"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/event"
                android:visibility="gone">

            </ImageView>

            <TextView
                android:id="@+id/lblDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:gravity="center"
                android:text="Sunday - Sep 14, 2023, 15.00 - 15.30"
                android:textColor="@color/clr_black"
                android:textSize="13dp"></TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnrEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lnrTime"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_10sdp">

            <!--            <ImageView-->
            <!--                android:layout_width="30dp"-->
            <!--                android:layout_height="30dp"-->
            <!--                android:layout_gravity="center"-->
            <!--                android:src="@drawable/online_meeting">-->

            <!--            </ImageView>-->

            <TextView
                android:id="@+id/lblEventMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Mode - Phone Call"
                android:textColor="@color/clr_black"
                android:textSize="13dp">

            </TextView>

        </LinearLayout>


        <TextView
            android:id="@+id/lblLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lnrEvent"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:text="Take me to meeting >>"
            android:textColor="@color/teacher_clr_blue"
            android:textSize="15dp"
            android:visibility="gone">

        </TextView>

        <TextView
            android:id="@+id/lblCancelButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblLink"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/bg_black_white_box"
            android:gravity="center"
            android:padding="5dp"
            android:text="Cancel"
            android:textColor="@color/teacher_clr_pink"
            android:textSize="14dp"
            android:textStyle="bold"
            android:visibility="visible"></TextView>

        <TextView
            android:id="@+id/lblCancelReopen"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblLink"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/bg_black_white_box"
            android:gravity="center"
            android:padding="5dp"
            android:text="Cancel &amp; Reopen"
            android:textColor="@color/teacher_clr_blue"
            android:textSize="14dp"
            android:textStyle="bold"
            android:visibility="visible">

        </TextView>
    </RelativeLayout>
</RelativeLayout>