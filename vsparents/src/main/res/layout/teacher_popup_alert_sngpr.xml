<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teacher_clr_black_trans_50"
    android:padding="25dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/teacher_tooltip_bg"
        android:orientation="vertical">


        <TextView
            android:id="@+id/popupRemove_tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/teacher_colorPrimaryDark"
            android:gravity="center"
            android:padding="7dp"
            android:text="@string/teacher_pop_remove_title"
            android:textColor="@color/teacher_clr_white"
            android:textSize="16dp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/teacher_clr_grey_light" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/teacher_clr_white"
            android:padding="10dp">

            <TextView
                android:id="@+id/popupRemove_tvMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/teacher_pop_remove_msg"
                android:textColor="@color/teacher_clr_grey"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/popupRemove_tvCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:padding="7dp"
                    android:text="@string/teacher_pop_remove_btn_no"
                    android:textAllCaps="true"
                    android:textColor="@color/teacher_colorPrimaryDark"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/popupRemove_tvOk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:clickable="true"
                    android:padding="7dp"
                    android:text="@string/teacher_pop_remove_btn_yes"
                    android:textAllCaps="true"
                    android:textColor="@color/teacher_colorPrimaryDark"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>


        </FrameLayout>
    </LinearLayout>


</RelativeLayout>