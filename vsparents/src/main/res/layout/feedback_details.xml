<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/teacher_img_app_bg"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/school_name"
            android:textSize="15sp"
            style="@style/feed_Back_Details"
            android:textStyle="normal" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="*"
            android:textColor="@color/clr_red"
            android:textSize="20dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/login_shadow_card"
            android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/SchoolList"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/your_name"
                android:textSize="15sp"
                style="@style/feed_Back_Details"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="*"
                android:textColor="@color/clr_red"
                android:textSize="20dp" />

        </LinearLayout>

        <EditText
            android:id="@+id/txtContactPerson"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/login_shadow_card"
            android:inputType="text"
            android:textSize="15dp"
            android:paddingLeft="5dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/alternate_mobile_number"
                android:textSize="15sp"
                style="@style/feed_Back_Details"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="*"
                android:textColor="@color/clr_red"
                android:textSize="20dp" />

</LinearLayout>

        </LinearLayout>

        <EditText
            android:id="@+id/txtContactMobileNumber"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/login_shadow_card"
            android:inputType="number"
            android:textSize="15dp"
            android:maxLength="10"
            android:paddingLeft="5dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/email_id"
                style="@style/feed_Back_Details"
                android:textSize="15sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="*"
                android:textColor="@color/clr_red"
                android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

        <EditText
            android:id="@+id/txtEmailID"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="15dp"
            android:background="@drawable/login_shadow_card"
            android:inputType="text"
            android:paddingLeft="5dp" />

        <Button
            android:id="@+id/btnNext"
            style="@style/Teacher_btn_login"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="25dp"
            android:text="@string/btn_next" />

    </LinearLayout>
    </ScrollView>



</RelativeLayout>