<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_app_bg"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_height="100dp">

            <LinearLayout
                android:id="@+id/menu_Exam"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cardview_border"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="2dp">


                <ImageView
                    android:layout_width="@dimen/home_menu_icon"
                    android:layout_height="@dimen/home_menu_icon"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/checklist" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:letterSpacing="0.05"
                    android:text="Exam"
                    android:textColor="@color/clr_black"
                    android:textSize="16sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/aHome_cvEmergency"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_height="100dp">

            <LinearLayout
                android:id="@+id/menu_Knowledge_Enhancement"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cardview_border"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="2dp">


                <ImageView
                    android:layout_width="@dimen/home_menu_icon"
                    android:layout_height="@dimen/home_menu_icon"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/idea" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:letterSpacing="0.05"
                    android:text="Quiz"
                    android:textColor="@color/clr_black"
                    android:textSize="16sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>



    <include
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bannerView"
        android:layout_marginTop="10dp"
        layout="@layout/ads_view"/>

    <com.google.android.gms.ads.AdView
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/adView"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        ads:adSize="@string/ads_size"
        ads:adUnitId="@string/ads_unit_one"
        tools:ignore="MissingConstraints">
    </com.google.android.gms.ads.AdView>

</androidx.constraintlayout.widget.ConstraintLayout>