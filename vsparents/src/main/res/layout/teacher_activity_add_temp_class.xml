<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TeacherAttendanceScreen">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/addTempClass_rlToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/addTempClass_IvBack"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                app:srcCompat="@drawable/teacher_ic_arrow_back" />

            <TextView
                android:id="@+id/addTempClass_tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/addTempClass_IvBack"
                android:layout_toRightOf="@+id/addTempClass_IvBack"
                android:text="@string/teacher_title_add_temp_class"
                android:textColor="@color/teacher_clr_white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/addTempClass_tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="@string/teacher_atten_standard"
                android:textColor="@color/teacher_clr_grey"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/addTempClass_spinStandard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent" />

            <TextView
                android:id="@+id/addTempClass_tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/teacher_atten_section"
                android:textColor="@color/teacher_clr_grey"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/addTempClass_spinSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent" />

            <TextView
                android:id="@+id/addTempClass_tv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/teacher_atten_subject"
                android:textColor="@color/teacher_clr_grey"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/addTempClass_spinSubject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent" />

            <Button
                android:id="@+id/addTempClass_btnAdd"
                style="@style/Teacher_btn_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="@string/teacher_btn_Add"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>