    <RelativeLayout
        android:id="@+id/rytDetailsDisplay"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/bg_layout_with_shadow">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lblFee"
                    android:layout_width="100sp"
                    android:text="@string/fee_name"
                    android:textSize="12sp"
                    android:textColor="@color/clr_grey"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/lblFeeName"
                    android:layout_toRightOf="@+id/lblFee"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:text=": Computer fees"
                    android:textColor="@color/clr_black"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rytTerm1"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lblMonth"
                    android:layout_width="100sp"
                    android:text="@string/monthly_fees"
                    android:textSize="12sp"
                    android:textColor="@color/clr_grey"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/lblMonthlyFees"
                    android:layout_toRightOf="@+id/lblMonth"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:text=": 2000"
                    android:textColor="@color/clr_black"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:layout_height="wrap_content" />



            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:id="@+id/rytTerm2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lbltotal"
                    android:layout_width="100sp"
                    android:text="@string/total"
                    android:textSize="12sp"
                    android:textColor="@color/clr_grey"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/lblTotal"
                    android:layout_toRightOf="@+id/lbltotal"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:text=": 2887"
                    android:textColor="@color/clr_black"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
        </LinearLayout>






    </RelativeLayout>



</LinearLayout>


