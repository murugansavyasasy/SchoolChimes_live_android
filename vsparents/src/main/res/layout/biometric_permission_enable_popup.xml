<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/bpTransparent_black"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_margin="10dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:background="@drawable/rect_popup_white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgClose"
            android:layout_margin="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
             android:layout_gravity="end"
             android:src="@drawable/img_close" />

        <TextView
            android:id="@+id/lblTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="10dp"
            android:text="@string/fingerprint_authentication"
            android:textColor="@color/clr_yellow"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:fontFamily="@font/futura_medium"
            android:visibility="visible" />

        <TextView
            android:id="@+id/lblHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="2dp"
            android:fontFamily="@font/poppins_regular"
            android:text=""
            android:textColor="@color/clr_black"
            android:textSize="15dp"
            android:visibility="visible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/biometric_security" />


        <TextView
            android:id="@+id/lblAuthenticate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/please_allow_school_chimes_to_make_use_of_your_fingerprint_authentication_to_enable_seamless_attendance_registration"
            android:textColor="@color/clr_black"
            android:fontFamily="@font/poppins_regular"

            android:background="@drawable/bg_rect_light_grey"
            android:textSize="15dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/btnAllow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgMarkAttendance"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="50dp"
            android:background="@drawable/bg_rect_yellow"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:text="@string/yes_enable_seamless_attendance"
            android:fontFamily="@font/futura_medium"
            android:textAlignment="center"
            android:textColor="@color/bpWhite"
            android:visibility="visible" />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:id="@+id/btnSkip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgMarkAttendance"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="50dp"
            android:background="@drawable/bg_rect_location"
            android:padding="10dp"
            android:text="@string/no_i_ll_continue_with_the_conventional_method"
            android:fontFamily="@font/futura_medium"
            android:textAlignment="center"
            android:textColor="@color/clr_black"
            android:visibility="visible" />


    </LinearLayout>
</RelativeLayout>

