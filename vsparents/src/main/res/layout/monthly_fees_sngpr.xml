    <RelativeLayout
        android:id="@+id/rytDetailsDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_layout_with_shadow">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lblCreate"
                    android:layout_width="100sp"
                    android:text="@string/fee_name"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:textColor="@color/clr_grey"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/lblFeeName"
                    android:layout_toRightOf="@+id/lblCreate"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:text=": 12-03-1994"
                    android:textStyle="normal"
                    android:textColor="@color/clr_black"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>



            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lblTot1"
                    android:layout_width="100sp"
                    android:text="@string/monthly_fees"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:textColor="@color/clr_grey"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/lblMonthly"
                    android:layout_toRightOf="@+id/lblTot1"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:text=": 2000"
                    android:textStyle="normal"
                    android:textColor="@color/clr_black"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rytTerm1"
                android:visibility="visible"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lblterm1"
                    android:layout_width="100sp"
                    android:text="@string/total_monthlyfees"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="@color/clr_grey"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/lblTotal"
                    android:layout_toRightOf="@+id/lblterm1"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:text=": 2000"
                    android:textColor="@color/clr_black"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:layout_height="wrap_content" />


                <!--<TextView-->
                <!--android:id="@+id/lblTotalFrom"-->
                <!--android:layout_toRightOf="@+id/lblTotal"-->
