<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/rytLessons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/bg_shadow_white_card"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblClassName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="II -A -"
                android:textColor="@color/teacher_clr_yellow"
                android:textSize="@dimen/_14ssp"/>

            <TextView
                android:id="@+id/lblSectionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="II -A"
                android:textColor="@color/teacher_clr_yellow"
                android:textSize="@dimen/_14ssp"/>

        </LinearLayout>


        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/lblSubjectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"
            android:textColor="@color/bpBlue"
            android:layout_gravity="center"
            android:textSize="@dimen/_14ssp"/>



        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/lblStaff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Staff Name  - "
                android:textColor="@color/clr_black"
                android:textSize="@dimen/_12ssp"/>

            <TextView
                android:id="@+id/lblStaffName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Murugan"
                android:textColor="@color/clr_black"

                android:textSize="@dimen/_14ssp"/>

        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/lblCompleted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed Status  - "
                android:textColor="@color/clr_black"
                android:textSize="@dimen/_12ssp"/>

            <TextView
                android:id="@+id/lblStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2/3"
                android:textColor="@color/clr_black"
                android:textSize="@dimen/_14ssp"/>

        </LinearLayout>


        <View
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/card_grey" />




        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/CustomProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:indeterminate="false"
            android:max="100"
            android:minWidth="200dp"
            android:minHeight="20dp"
            android:progress="0" />


        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lblPercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="0%"
                android:textColor="@color/clr_black"
                android:textSize="@dimen/_14sdp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:textColor="@color/clr_black"
                android:text="100 %"
                android:textSize="@dimen/_14sdp" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <Button
                android:id="@+id/btnViewLesson"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_shadow_white_card"
                android:paddingHorizontal="5dp"
                android:text="VIEW"
                android:textColor="@color/teacher_clr_blue"
                android:textSize="14dp" />

        </RelativeLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>