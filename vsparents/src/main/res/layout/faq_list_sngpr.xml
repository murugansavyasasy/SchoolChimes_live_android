<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10sp"
    tools:context="com.vs.schoolmessenger.activity_SINGAPORE.FAQScreen_SNGPR">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:paddingBottom="5sp"
        android:paddingLeft="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/lblQuestion"
            android:layout_width="wrap_content"
            android:text="Question"
            android:textColor="@color/bpblack"
            android:textSize="20dp"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView

            android:layout_marginLeft="20dp"
            android:id="@+id/lblAns"
            android:layout_width="wrap_content"
            android:text="@string/answer"
            android:textColor="@color/bpblack"
            android:textSize="20dp"
            android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/lblAnswer"
                android:layout_marginLeft="5dp"
                android:text="Answer"
                android:textSize="20dp"
                android:textColor="@color/clr_green"
                android:layout_toRightOf="@+id/lblAns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>