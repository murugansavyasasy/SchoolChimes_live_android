<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/light_yellow_color" /> <!-- Semi-transparent black for shadow -->
            <corners android:radius="20dp"/> <!-- Apply the same radius -->
        </shape>
    </item>

    <item android:left="0dp" android:top="0dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/light_yellow_color"/> <!-- Main background color -->
            <corners android:radius="20dp"/> <!-- Same corner radius -->
        </shape>
    </item>

</layer-list>
