<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Left dark green strip with rounded left corners -->
    <item android:width="6dp" android:gravity="start">
        <shape android:shape="rectangle">
            <solid android:color="#004d2c" />
            <corners
                android:topLeftRadius="12dp"
                android:bottomLeftRadius="12dp" />
        </shape>
    </item>

    <!-- Main light green background with rounded corners -->
    <item android:left="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#E0F2F1" />
            <corners
                android:topRightRadius="12dp"
                android:bottomRightRadius="12dp" />
        </shape>
    </item>

</layer-list>
