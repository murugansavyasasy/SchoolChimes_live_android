<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/bpWhite"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>

    <!-- Ticket Cutout -->
    <item android:right="8dp" android:left="8dp" android:top="8dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#32ADE6"/>
            <corners
                android:topLeftRadius="24dp"
                android:topRightRadius="24dp"
                android:bottomLeftRadius="24dp"
                android:bottomRightRadius="24dp"/>
        </shape>
    </item>

    <!-- Ticket Cutout Circles -->
    <item android:gravity="left|center_vertical">
        <shape android:shape="oval">
            <solid android:color="@color/bpWhite"/>
            <size android:width="24dp" android:height="24dp"/>
        </shape>
    </item>

    <item android:gravity="right|center_vertical">
        <shape android:shape="oval">
            <solid android:color="@color/bpWhite"/>
            <size android:width="24dp" android:height="24dp"/>
        </shape>
    </item>

</layer-list>
